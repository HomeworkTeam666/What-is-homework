/* pages/profile/index.wxss */

page{
  background: #f5f5f5;
}

.profile-top{
  width: 100%;
  height: 320rpx;
  background: #f48fb1;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo{  
  /* color: #fff; */  
  font-size: 14px;  
  border-radius:40%;  
} 
.profile-row{
  height: 100rpx;
  padding: 20rpx;
  font-size: 35rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 0rpx #ccc;
}